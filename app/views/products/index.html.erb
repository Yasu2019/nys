<script>
$(document).ready(function(){
    // 定数：すべての商品カラム
    const allProductColumns = [
        "category", "partnumber", "materialcode", "phase", "stage", "description", 
        "status", "documenttype", "documentname", "documentrev", "documentcategory", 
        "documentnumber", "start_time", "deadline_at", "end_at", 
        "goal_attainment_level", "tasseido", "object"
    ];

    /**
     * 検索クエリの構築
     * @param {string} searchValue 検索値
     * @param {string} searchType 検索タイプ（exactまたはcont）
     * @returns {string} 構築されたクエリストリング
     */
    function buildSearchQuery(searchValue, searchType) {
        return allProductColumns.map(column => {
            const queryKey = searchType === 'exact' ? `q[${column}_eq]` : `q[${column}_cont]`;
            return `${queryKey}=${encodeURIComponent(searchValue)}`;
        }).join("&");
    }

    /**
     * 検索を実行
     */
    function performSearch() {
        const searchValue = $('#searchInput').val();
        const searchType = $('input[name="searchType"]:checked').val();
        const searchQuery = buildSearchQuery(searchValue, searchType);

        window.location.href = `/products?${searchQuery}`;
    }

    // イベントハンドラ：検索入力でEnterキーが押されたとき
    $('#searchInput').on('keyup', function(e){
        if (e.key === "Enter" || e.keyCode === 13) {
            performSearch();
        }
    });

    // イベントハンドラ：検索トリガがクリックされたとき
    $('#searchTrigger').on('click', function(){
        $('.search-icon').addClass('clicked');
        performSearch();
    });
});
</script>


