
<% ext = File.extname(fullfilename).downcase %>
<% icon = icon_for_extension(ext) %>

<% if matching_product %>
  <%= link_to product_verify_password_product_path(id: matching_product.id, blob_id: image.blob.id), 
  class: 'infoicon', 
  data: { toggle: 'tooltip' }, 
  title: "#{image.blob.filename} (ID: #{matching_product.id})" do %>
    <%= image_tag(icon) %>
  <% end %>
<% else %>
  <%= image_tag(icon, class: 'infoicon', title: image.blob.filename) %>
<% end %>



