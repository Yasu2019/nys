

<header class="sticky top-0 bg-white z-10">
<div class="flex flex-col">
<%= "Emailアドレス："%>
    <%= @user.email %> <br>
<%= "名前　　　　 ："%>
    <%= @user.name %> <br>
<%= "識別　　　　 ："%>
    <%= @user.role %> <br>
</div>
</header>


<section class="flex flex-col h-full lg:flex-row h-full">
  
    <div class="lg:inline-block w-1/3 ">
    </div>

              <div class="py-1 border-b-2">
                    <%= form_tag import_test_touans_path, multipart: true do %>
                    <label class="mt-2 sm:mt-0 py-2 w-[500px] sm:w-[212px] h-10 border border-primary-300 bg-gray-100 bg-opacity-50 text-primary-300 rounded-[3px] text-xs flex justify-center items-center">
                    <span class="text-lg ml-5 mx-8 ">CSVファイル選択</span>
                    <%= file_field_tag :file , class: "hidden"%>
                    </label>
                    <%= submit_tag "インポート",class:"btn btn-secondary btn-sm"  %>
                    <% end %>
                    </div>


    <div class="lg:inline-block w-2/3">




      <table class="sticky_table table-striped table-hover border-separate border-spacing-1 border-2 border-blue-900 bg-gray-100">

        <thead>
            <tr>  
                <th class="border-2 border-blue-900"><%= "箇条" %></th>
                <th class="border-2 border-blue-900"><%= "テスト問題" %></th>
            </tr>
        </thead>


        <tbody>
        <% @testmondais.each do |test| %>
    

        <tr>
          <td class="border-2 border-blue-900"><%= test.kajyou %></td>
          <td class="border-2 border-blue-900"><%= test.mondai %></td>
         <td class="inline-block">
  <div class="btn btn-secondary btn-sm">
    <%= button_to '削除', delete_testmondai_touans_path(testmondai_id: test.id), {method: :delete, data: { confirm: '本当に削除しますか？' } } %>
  </div>
</td>
          

          
        </tr>
      <% end %>
      </tbody>
      </table>
    </div>
</section>

<%= link_to '戻る', touans_path, class: 'btn btn-accent btn-sm' %>
