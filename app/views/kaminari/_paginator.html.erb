<%# The container tag
  - available local variables
    current_page:  a page object for the currently displayed page
    total_pages:   total number of pages
    per_page:      number of items to fetch per page
    remote:        data-remote
    paginator:     the paginator that renders the pagination tags inside
-%>
<%= paginator.render do -%>
  <nav class="pagination" role="navigation" aria-label="pager">
  <span class="mr-2"><%= first_page_tag unless current_page.first? %></span>
  <span class="mr-2"><%= prev_page_tag unless current_page.first? %></span>
  <% each_page do |page| -%>
    <% if page.display_tag? -%>
      <span class="mr-2"><%= page_tag page %></span>
    <% elsif !page.was_truncated? -%>
      <span class="mr-2"><%= gap_tag %></span>
    <% end -%>
  <% end -%>
  <span class="mr-2"><%= next_page_tag unless current_page.last? %></span>
  <%= last_page_tag unless current_page.last? %>
</nav>



<% end -%>


