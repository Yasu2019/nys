<% if sup.documents.attached? %>              
  <% sup.documents.each do |image| %>
    <% fullfilename = rails_blob_path(image) %>
    <% ext = File.extname(fullfilename).downcase %>
    <% icon = icon_for_extension(ext) %>
                
  
    <td><%= link_to image_tag(icon), supplier_verify_password_supplier_path(id: image.record.id, blob_id: image.blob.id), class: 'infoicon', data: { toggle: 'tooltip' }, title: image.blob.filename %></td>

  
  <% end %>
<% end %>


