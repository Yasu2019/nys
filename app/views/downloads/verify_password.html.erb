<h1>Verify Password for Download</h1>

<%# 生成されたパスワードを表示 %>
<p>正解パスワード: <%= session[:generated_password] %></p>



<%= form_with url: download_product_path(id: @document.id), method: :post, local: true do |f| %>
  
  <%= f.label :password, "Enter Password" %>
  <%= f.password_field :password %>
  <%= f.submit "Download" %>
<% end %>

<%= link_to '戻る', root_path, class: 'btn btn-accent' %>
